<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.uslive.rabyks" >

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.uslive.rabyks.activities.MainActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.uslive.rabyks.activities.LoginActivity"
            android:label="@string/title_activity_login" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.uslive.rabyks.activities.RegisterActivity"
            android:label="@string/title_activity_register" >
        </activity>
        <activity
            android:name="com.uslive.rabyks.activities.ClubActivity"
            android:label="@string/title_activity_club" >
        </activity>

        <service
            android:name="com.uslive.rabyks.services.SocketService"
            android:enabled="true"
            android:exported="true" >
        </service>
    </application>

</manifest>
